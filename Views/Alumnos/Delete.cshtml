@model CrudEscuela.Models.Alumno
@{
    ViewData["Title"] = "Elminar Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Elminar Alumno</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteAlumno">

                <input type="hidden" asp-for="Id"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for=" Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" disabled/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="Apellidos" class="control-label"></label>
                    <input asp-for="Apellidos" class="form-control" disabled />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for=" Estatus" class="control-label"></label>
                    <input asp-for="Estatus" class="form-control" disabled />
                    <span asp-validation-for="Estatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for=" FechadeAlta" class="control-label"></label>
                    <input asp-for="FechadeAlta" class="form-control" disabled />
                    <span asp-validation-for="FechadeAlta" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for=" GradoId" class="control-label"></label>
                    <input asp-for="GradoId" class="form-control" disabled />
                    <span asp-validation-for="GradoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <div class="form-check">
                        <input asp-for="Estado" class="form-check-input" type="checkbox" disabled/>
                        <label class="form-check-label" asp-for="Estado"></label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger "><i class="bi bi-trash"></i>Elminar Alumno</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
