@model CrudEscuela.Models.Grado
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Elminar Grado</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteGrado">

                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Semestre" class="control-label"></label>
                    <input asp-for="Semestre" class="form-control" disabled />
                    <span asp-validation-for="Semestre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for=" Estatus" class="control-label"></label>
                    <input asp-for="Estatus" class="form-control" disabled />
                    <span asp-validation-for="Estatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i>Elminar grado</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

